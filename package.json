{
  "name": "tg-cloud",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:turbo": "dotenv -e .env.development -- next dev --turbo -p 3000",
    "dev": "dotenv -e .env.development -- next dev ",
    "build:local": "dotenv -e .env.development -- next build",
    "build": "drizzle-kit push --accept-data-loss && next build", // <-- This is the change!
    "start": "next start",
    "lint": "next lint",
    "db:generate": "dotenv -e .env.development -- drizzle-kit generate",
    "db:migrate": "dotenv -e .env.development  -- drizzle-kit migrate",
    "db:push": "dotenv -e .env.development -- drizzle-kit push",
    "migrate": "pnpm db:generate && pnpm db:migrate",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --project tsconfig.json"
  },
  "dependencies": {
    // ... your dependencies
  },
  "devDependencies": {
    // ... your devDependencies
  },
  "pnpm": {
    "overrides": {
      "@types/react": "npm:types-react@19.0.0-rc.1",
      "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1"
    },
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
